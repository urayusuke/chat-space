.side-bar
  .side-bar_user_name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        =link_to new_group_path, class: "top-items__icons-edit" do 
          = icon('far', 'edit')
        =link_to edit_user_path(current_user), class: "top-items__icons-cog" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do|group|
      %ul
        %li
          =link_to group_messages_path(group) do
            = group.name
          %p= group.show_last_message