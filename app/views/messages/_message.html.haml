.chat-main__message-list
  %p.chat-main__message-list-name 
    = message.user.name
  %p.chat-main__message-list-date 
    = message.created_at.strftime("%Y年/%m月%d日 %H時%M分")
.chat-main__message-list    
  %p.chat-main__message-list-comment
    - if message.content.present? 
      = message.content
    = image_tag message.image.url, class: '.chat-main__message-list-comment' if message.image.present?
